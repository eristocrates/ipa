                  a owl:Ontology;
                  rdfs:label "SecurityCreditStatuses"@en;
                  owl:imports <https://spec.edmcouncil.org/fibo/ontology/master/latest/FBC/FinancialInstruments/FinancialInstruments/>,
                              <https://spec.edmcouncil.org/fibo/ontology/master/latest/FND/Arrangements/Lifecycles/>,
                              <https://spec.edmcouncil.org/fibo/ontology/master/latest/FND/Utilities/AnnotationVocabulary/>,
                              cmns-av:,
                              cmns-cxtdsg:;
                  owl:versionIRI <https://spec.edmcouncil.org/fibo/ontology/master/latest/MD/TemporalCore/SecurityCreditStatuses/>;
                  fibo-fnd-utl-av:hasMaturityLevel fibo-fnd-utl-av:Provisional;
                  cmns-av:copyright "Copyright (c) 2013-2025 EDM Council, Inc.".
fibo-md-temx-crs:CreditOK a owl:Class;
                          rdfs:isDefinedBy fibo-md-temx-crs:;
                          rdfs:label "credit o k"@en;
                          rdfs:subClassOf fibo-md-temx-crs:SecurityCreditStatus;
                          skos:definition "Not defaulted."@en.
fibo-md-temx-crs:InDefault a owl:Class;
                           rdfs:isDefinedBy fibo-md-temx-crs:;
                           rdfs:label "in default"@en;
                           rdfs:subClassOf fibo-md-temx-crs:SecurityCreditStatus;
                           skos:definition "The issuer has failed to pay somthing that they are contractually obliged to pay."@en;
                           skos:editorialNote "(review 7 Oct 09) Does this exist as a term? This is a characteristic of the instrument not the rating. Because it's in default you can expect the rating to drop. Applies to instrument not to debtor. So a company may have 3 bond issues and may be defualt on only one. 14 Oct: Degrees of defaults e.g. tranche not paying interest due to losses on the underlying portrfolio; tranches being used to pay down more senior tranches."@en.
fibo-md-temx-crs:SecurityCashflowStatus a owl:Class;
                                        rdfs:isDefinedBy fibo-md-temx-crs:;
                                        rdfs:label "security cashflow status"@en;
                                        rdfs:subClassOf fibo-fnd-arr-lif:LifecycleStatus;
                                        owl:disjointWith fibo-md-temx-crs:SecurityCreditStatus;
                                        skos:definition "The status of the cashflow due to the holder from the security."@en;
                                        skos:editorialNote "Specialize this for preferred stocks, debt tranches and so on."@en.
fibo-md-temx-crs:SecurityCreditStatus a owl:Class;
                                      rdfs:isDefinedBy fibo-md-temx-crs:;
                                      rdfs:label "security credit status"@en;
                                      rdfs:subClassOf fibo-fnd-arr-lif:LifecycleStatus,
                                                      [a owl:Restriction ; 
                                                       owl:onProperty cmns-cxtdsg:appliesTo ; 
                                                       owl:someValuesFrom fibo-fbc-fi-fi:Security].
fibo-md-temx-crs:acceleratedPrincipalPaymentsExpected a owl:DatatypeProperty;
                                                      rdfs:domain fibo-md-temx-crs:SecurityCashflowStatus;
                                                      rdfs:isDefinedBy fibo-md-temx-crs:;
                                                      rdfs:label "accelerated principal payments expected"@en;
                                                      rdfs:range xsd:boolean.
fibo-md-temx-crs:interestPaymentsExpected a owl:DatatypeProperty;
                                          rdfs:domain fibo-md-temx-crs:SecurityCashflowStatus;
                                          rdfs:isDefinedBy fibo-md-temx-crs:;
                                          rdfs:label "interest payments expected"@en;
                                          rdfs:range xsd:boolean.
fibo-md-temx-crs:principalPaymentsExpected a owl:DatatypeProperty;
                                           rdfs:domain fibo-md-temx-crs:SecurityCashflowStatus;
                                           rdfs:isDefinedBy fibo-md-temx-crs:;
                                           rdfs:label "principal payments expected"@en;
                                           rdfs:range xsd:boolean.
